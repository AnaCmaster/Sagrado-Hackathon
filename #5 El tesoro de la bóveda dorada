import java.util.Scanner;
public class MyClass {
    public static void main(String args[]) {
        // Las variables
     double Is,P,R,T;
     Scanner teclado= new Scanner(System.in);
     //El comando de las variables
     System.out.println("Entre el monto del capital");
     P = teclado.nextDouble();
     System.out.println("Entre la tasa de interés");
     R = teclado.nextDouble();
     System.out.println("Entre el tiempo en años");
     T = teclado.nextDouble();
     System.out.println();
     // La ecuacion del interes simple
     Is= P*R*T;
     // El comando de la respuesta de la variable
     System.out.println("Interés simple:" + Is);
    }
}
